@model IEnumerable<Brand>
<h1 class="alert alert-success text-center" >Welcome in Brands</h1>
<a asp-controller="Brands" asp-action="GetAddView" class="btn btn-dark"> Add Brand</a>

<div class="mt-4">
    <form method="get" asp-controller="Brands" asp-action="GetIndexView">
        <div class="input-group">
            <input type="text" name="Search" value="@ViewBag.Search" />
            <button type="submit" class="btn btn-secondary input-group-append"><i class="bi bi-search"></i></button>
        </div>
    </form>
</div>

@if(Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(p => p.Id)</th>
                <th>@Html.DisplayNameFor(p => p.BrandName)</th>
                <th>@Html.DisplayNameFor(p => p.ImagePath)</th>
            </tr>
        </thead>

        <tbody>
            @{
                foreach(var item in Model)
                {
                    <tr>
                        <td style="font-size:1.5rem">@item.Id</td>
                        <td style ="font-size:1.5rem">@item.BrandName</td>
                        <td style="width:18rem"><img class="rounded-3 w-25 h-25" src="@item.ImagePath" /></td>
                        <td>
                            <a asp-controller="Brands" asp-action="GetDetailsView" asp-route-id="@item.Id" class="btn btn-outline-warning w-100"><i class="bi bi-list-ul"></i> </a>
                        </td>

                        <td>
                            <a asp-controller="Brands" asp-action="GetEditView" asp-route-id="@item.Id" class="btn btn-outline-primary w-100"><i class="bi bi-pencil-square"></i> </a>
                        </td>

                        <td>
                            <a asp-controller="Brands" asp-action="GetDeleteView" asp-route-id="@item.Id" class="btn btn-outline-danger w-100"><i class="bi bi-trash"></i> </a>
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>
}
else
{
    <h1 class="alert alert-warning text-center mt-5" >There are no Brands</h1>

}

@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <div class="card border-success bg-transparent mb-2 text-dark text-center m-5"
             style="width:18rem; height:23rem; display:inline-block">
            <div class="card-header border-success bg-transparent">@item.BrandName</div>
            <div class="card-body border-success bg-transparent" >
                <img class="rounded-3 w-75"  src="@item.ImagePath" />
            </div>
            <div class="card-footer border-success bg-transparent">Start Date @item.BrandStartDate.Year
                <a asp-controller="Brands" asp-action="GetDetailsView" asp-route-id="@item.Id" class="btn btn-outline-warning w-100 mt-3"> Details </a>
            </div>
        </div>
    }
}